{
  "name": "imaging",
  "run_interval": {
    "trigger": "cron",
    "second": null,
    "minute": "*/1",
    "hour": null,
    "day_of_week": null
  },
  "pipeline": [
    {
      "task_type": "actuator",
      "sensor_name": "alarm_b",
      "cmd": "blink",
      "params": {
        "repeats": 4,
        "t": 0.5
      }
    },
    {
      "task_type": "actuator",
      "sensor_name": "alarm_b",
      "cmd": "on",
      "params": {}
    },
    {
      "task_type": "sleep",
      "interval_seconds": 4
    },
    {
      "task_type": "switch_state",
      "states_list_path": "./configs/imaging_states.json",
      "state_name": "all_on"
    },
    {
      "task_type": "get_web_images"
    },
    {
      "task_type": "switch_state",
      "states_list_path": "./configs/imaging_states.json",
      "state_name": "all_off"
    },
    {
      "task_type": "get_web_images"
    },
    {
      "task_type": "actuator",
      "sensor_name": "alarm_b",
      "cmd": "off",
      "params": {}
    }
  ]
}